@model ControleFinanceiroPessoal.Domain.Entities.Receita
@using ControleFinanceiroPessoal.WebUI.ComponentsHelper;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Receitas</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nova Receita</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Valor, new { @class = "control-label col-md-2" })
            <div class="col-xs-2">
                @Html.TextBoxFor(model => model.Valor, new { @class = "form-control", @placeholder="R$" })
                @Html.ValidationMessageFor(model => model.Valor)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataReferencia, new { @class = "control-label col-md-2" })
            <div class="col-xs-2">
                @Html.TextBoxFor(model => model.DataReferencia, new { @class = "form-control datePicker" })
                @Html.ValidationMessageFor(model => model.DataReferencia)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataCompetencia, new { @class = "control-label col-md-2" })
            <div class="col-xs-2">
                @Html.TextBoxFor(model => model.DataCompetencia, new { @class = "form-control datePicker" })
                @Html.ValidationMessageFor(model => model.DataCompetencia)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdTipoReceita, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.IdTipoReceita, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdTipoReceita)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descricao)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                @CHtmlHelper.Submit("btn-success", "Salvar")
                @CHtmlHelper.SubmitWithIcon("btn-success", "glyphicon-ok", "Salvar")
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
